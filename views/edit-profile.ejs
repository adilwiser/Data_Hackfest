<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>
        :root {
            --background-color: #0a0a0a;
            --text-color: #00ff00;
            --primary-color: #ff00ff;
            --secondary-color: #ffff00;
            --border-color: #00ff00;
        }
        body {
            font-family: 'Press Start 2P', cursive;
            margin: 0;
            background-color: var(--background-color);
            color: var(--text-color);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            text-align: center;
        }
        .container {
            width: 90%;
            max-width: 800px;
        }
        header {
            padding: 20px;
            margin-bottom: 40px;
            border-bottom: 4px solid var(--border-color);
        }
        header h1 {
            margin: 0;
            font-size: 2em;
            color: var(--secondary-color);
            text-shadow: 4px 4px 0px var(--primary-color);
        }
        .button {
            background-color: var(--primary-color);
            color: var(--background-color);
            border: 4px solid var(--border-color);
            padding: 15px 25px;
            font-size: 1em;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            text-transform: uppercase;
        }
        .form-container {
            background-color: #1a1a1a;
            border: 4px solid var(--border-color);
            padding: 30px;
            text-align: left;
        }
        .form-field {
            margin-bottom: 20px;
        }
        .form-field label {
            display: block;
            margin-bottom: 8px;
            font-size: 0.8em;
        }
        .form-field input {
            width: 100%;
            padding: 10px;
            background-color: var(--background-color);
            border: 2px solid var(--border-color);
            color: var(--text-color);
            font-family: 'Press Start 2P', cursive;
            font-size: 0.8em;
            box-sizing: border-box;
        }
        .avatar-selector {
            display: flex;
            gap: 15px;
            margin-top: 10px;
        }
        .avatar-selector img {
            width: 60px;
            height: 60px;
            cursor: pointer;
            border: 3px solid transparent;
        }
        .avatar-selector img.selected {
            border-color: var(--secondary-color);
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Edit Your Profile</h1>
        </header>
        <main>
            <div class="form-container">
                <form action="/profile/edit" method="POST">
                    <div class="form-field">
                        <label for="nickname">Nickname</label>
                        <input type="text" id="nickname" name="nickname" value="<%= user.nickname %>" required>
                    </div>
                    <div class="form-field">
                        <label>Choose Avatar</label>
                        <div class="avatar-selector">
                            <% const avatarOptions = [
                                '/avatars/avatar1.png',
                                '/avatars/avatar2.png',
                                '/avatars/avatar3.png',
                                '/avatars/avatar4.png',
                                '/default-avatar.png',
                            ]; %>
                            <% avatarOptions.forEach(url => { %>
                                <img src="<%= url %>" onclick="selectAvatar(this, '<%= url %>')" class="<%= user.picture === url ? 'selected' : '' %>" alt="Avatar option">
                            <% }); %>
                        </div>
                        <input type="hidden" id="picture" name="picture" value="<%= user.picture %>">
                    </div>
                    <button type="submit" class="button">Save Changes</button>
                    <a href="/profile" class="button" style="background-color: #555; margin-left: 10px;">Cancel</a>
                </form>
            </div>
        </main>
    </div>
    <script>
        function selectAvatar(element, url) {
            document.querySelectorAll('.avatar-selector img').forEach(img => img.classList.remove('selected'));
            element.classList.add('selected');
            document.getElementById('picture').value = url;
        }
    </script>
</body>
</html>